<!DOCTYPE html>
<html>
    <head>
        <!-- Use the 'title' property to render a page title  -->
        <title><%= title %></title>
    </head>
    <body>
      <% for(var i in messages) { %>
        <div class="flash"><%=messages[i] %></div>
      <% } %>
      <!-- Load the static image file  -->
      <img src="img/GvcpLogo.png" alt="Logo">
      <h2><%= title%></h2>
      <h3><%= headline%></h3>
      <% if (userFullName) { %>
        <h4>Hello <%=userFullName %></h4>
        <% if (isAdmin) { %>
          <a href="/createEvent">Create an Event</a>
        <% } %>
        <a href="/updateUser">Update profile</a>
        <a href="/createRes">Make a reservation</a>
        <a href='/listRes'>List reservations</a>
        <a href="/signout">Sign out</a>
      <% } else { %>
        <a href="/signup">Sign up</a>
        <a href="/signin">Sign in</a>
      <% } %>
    </body>
</html>
