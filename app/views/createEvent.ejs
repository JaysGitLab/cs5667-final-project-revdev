<!DOCTYPE html>
<html>
<head>
  <title>
    <%=title %>
  </title>
</head>
<body>
  <% for(var i in messages) { %>
    <div class="flash"><%=messages[i] %></div>
  <% } %>
  <form action="/createEvent" method="post">
    <div>
      <label>Event Type:</label>
      <input type="text" name="eventType" />
    </div>
    <div>
      <label>Min Number of People:</label>
      <input type="number" name="numberOfPeopleFrom" />
    </div>
    <div>
      <label>Max Number of People:</label>
      <input type="number" name="numberOfPeopleTo" />
    </div>
    <div>
      <label>Cost:</label>
      $ <input type="number" name="cost" />
    </div>
    <div>
      <label>Deposit:</label>
      <input type="number" name="deposit" /> % (Deposit should be entered as % of the cost)
    </div>
    <div>
      <label>Reminder Email Days:</label>
      <input type="number" name="reminderEmail" />
    </div>
    <div>
      <label>Free Cancelation Days:</label>
      <input type="number" name="freeCancelation" />
    </div>
    <div>
      <label>Max Number of Days:</label>
      <input type="number" name="maxNumberOfDays" />
    </div>
    <div>
      <input type="submit" value="Save" />
    </div>
  </form>
</body>
</html>
